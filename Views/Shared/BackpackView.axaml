<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaRPG.Views.Shared.BackpackView"
             xmlns:vm="clr-namespace:AvaloniaRPG.ViewModels"
             x:DataType="vm:BackpackViewModel">

    <ItemsControl ItemsSource="{Binding Slots}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Rows="8" Columns="5" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" Background="DarkSlateGray" Width="50" Height="50">
                    <TextBlock Text="{Binding Item.Name}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>